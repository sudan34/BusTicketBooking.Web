@model BusTicketBooking.Models.ViewModels.BusVm
<form method="post" asp-action="CreateUpdate" enctype="multipart/form-data">
    <input type="hidden" asp-for="Bus.Id" />
    <div class="border p-3 mt-4">
        <div class="row pb-3">
            <h2 class="text-primary">@((Model.Bus == null || Model.Bus.Id == 0) ? "Add" : "Update")Bus Details</h2>
        </div>
        <div asp-validation-summary="All">
            <div class="row mb-3">
                <label asp-for="Bus.BusNumber"></label>
                <input asp-for="Bus.BusNumber" class="form-control" />
                <span asp-validation-for="Bus.BusNumber" class="text-danger"></span>
            </div>
            <div class="row mb-3">
                <label asp-for="Bus.SeatCapacity"></label>
                <input asp-for="Bus.SeatCapacity" class="form-control" />
                <span asp-validation-for="Bus.SeatCapacity" class="text-danger"></span>
            </div>
            @if(Model.Bus == null || Model.Bus.Id == 0)
            {
                <button class="btn btn-primary" type="submit">Create</button>
            }else
            {
                <button class="btn btn-secondary" type="submit">Update</button>
            }
        </div>
    </div>
</form>
